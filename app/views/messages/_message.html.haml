.main-chat__message__log{data: {message: {id: message.id}}}
  .main-chat__message__log__upload
    .main-chat__message__log__upload__name
      = message.user.name
    .main-chat__message__log__upload__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message__log__comment
    - if message.content.present?
      %p.main-chat__message__log__comment__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?



